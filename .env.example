# === OpenAI API 設定 ===
OPENAI_API_KEY=

# === OpenAI STT 設定 ===
OPENAI_STT_MODEL=whisper-1
OPENAI_STT_LANGUAGE=auto
OPENAI_STT_RESPONSE_FORMAT=json
OPENAI_STT_TEMPERATURE=0

# === OpenAI LLM 設定 ===
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_LLM_TEMPERATURE=0.7
OPENAI_LLM_MAX_TOKENS=800
OPENAI_LLM_TOP_P=0.9

# === 服務模式設定 ===
STT_MODE=openai
LLM_MODE=openai

# === 評估系統設定 ===
# 文字處理選項
TEXT_NORMALIZATION=true        # 啟用文字正規化
PUNCTUATION_IGNORE=true        # 比對時忽略標點符號
CASE_SENSITIVE=false           # 是否區分大小寫

# 評估參數
MIN_SIMILARITY_THRESHOLD=60    # 最低相似度門檻 (%)
HIGH_ACCURACY_THRESHOLD=90     # 高準確率門檻 (%)

# === Flask 應用程式設定 ===
SECRET_KEY=auto-generate
MAX_FILE_SIZE=100              # 音訊檔案大小限制 (MB)
FLASK_DEBUG=false

# === 日誌設定 ===
LOG_LEVEL=INFO